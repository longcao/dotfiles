[apply]
	whitespace = fix
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	whitespace = fix,space-before-tab,trailing-space
	pager = less -x1,5
	autocrlf = input
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
[user]
	name = Long Cao
	email = longcao@gmail.com
[credential]
	helper = osxkeychain
[alias]
	prune-all = !git remote | xargs -n 1 git remote prune
	pull = pull --rebase --autostash
[push]
	default = simple
[diff]
	compactionHeuristic = true
[fetch]
	prune = true
[protocol]
	version = 2
[pull]
	rebase = false
	ff = only
